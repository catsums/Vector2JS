{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"module":"NodeNext",
		"skipLibCheck": false,
		"esModuleInterop": true,
		"declaration": true,
		"allowJs": true,

		// "allowImportingTsExtensions": true,
		"isolatedModules": true,

		/* Linting */
		"strict": false,
		"outDir": "lib"
	},
	"include": ["src/**/*"],
	"typeRoots": ["./node_modules/@types", "./src"]
  }
  